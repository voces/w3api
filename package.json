{
  "name": "w3api",
  "version": "2.4.0",
  "description": "TypeScript API for Warcraft III natives",
  "author": "verit",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && ts-node bin/build.ts --unhandled-rejections=strict",
    "dev": "npm-watch",
    "test": "jest",
    "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-verit": "^3.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fast-glob": "^3.2.4",
    "jest": "^26.6.3",
    "npm-watch": "^0.7.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "legacyWatch": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voces/w3api.git"
  },
  "bugs": {
    "url": "https://github.com/voces/w3api/issues"
  },
  "homepage": "https://github.com/voces/w3api#readme",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "dependencies": {
    "@types/luaparse": "^0.2.6",
    "luaparse": "^0.3.0",
    "w3xdata": "^2.2.0"
  }
}
