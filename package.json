{
  "name": "w3api",
  "version": "2.3.0",
  "description": "TypeScript API for Warcraft III natives",
  "author": "verit",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && ts-node bin/build.ts --unhandled-rejections=strict",
    "clean": "rm -rf dist",
    "dev": "npm-watch",
    "prepublishOnly": "npm run clean && npm run build",
    "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test-lint": "deno lint . --ignore=node_modules,dist",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.0.1",
    "@types/luaparse": "^0.2.8",
    "@types/node": "^18.7.16",
    "fast-glob": "^3.2.12",
    "jest": "^29.0.3",
    "npm-watch": "^0.11.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "legacyWatch": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voces/w3api.git"
  },
  "bugs": {
    "url": "https://github.com/voces/w3api/issues"
  },
  "homepage": "https://github.com/voces/w3api#readme",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "dependencies": {
    "luaparse": "^0.3.1",
    "w3xdata": "^2.2.2"
  }
}
